---
export const prerender = false;
const { searchTerm } = Astro.params;

import { searchProducts } from '../../../content/cosmic';
import MultipleProductDisplayPagesLayout from '../../../layouts/MultipleProductDisplayPagesLayout.astro';

if (!searchTerm) {
	return Astro.redirect('/all-products');
}

const products = await searchProducts(searchTerm);
---

<MultipleProductDisplayPagesLayout
	title={`Search results for "${searchTerm}"`}
	products={products}
/>
