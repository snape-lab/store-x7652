---
import clsx from 'clsx';

import Navbar from '../components/Navbar.astro';
import AdBanner from '../components/AdBanner.astro';
import Footer from '../components/Footer.astro';
import { projectName } from '../content/project';

// Supports weights 100-900
import '@fontsource-variable/overpass';
import '@fontsource/staatliches';
import '@fontsource/bangers';
import HoveringNavBar from '../components/HoveringNavBar.astro';

interface Props {
	title?: string;
	noBanner?: boolean;
}

const { title, noBanner } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Buy wearables for affordable prices" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<title>{projectName} {title && `| ${title}`}</title>
	</head>
	<body class="p-8 pt-2">
		<Navbar />
		<HoveringNavBar />
		{!noBanner && <AdBanner />}
		<div class={clsx('min-h-[90vh]')}>
			<slot />
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--fontColor: #333;
		--bgColor: #fbf9fa;
	}
	html {
		/* font-family: 'Overpass', system-ui, sans-serif; */
		font-family: 'Staatliches', system-ui, sans-serif;
		background: var(--bgColor);
		color: var(--fontColor);
	}

	*::selection {
		background: #fd0054;
		color: white;
	}

	a {
		color: inherit;
		text-decoration: none;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.textBgGrad {
		background: linear-gradient(90deg, #fd0054, tomato);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.textStroked {
		-webkit-text-stroke: 1px #fd0054;
		-webkit-text-fill-color: transparent;
	}
</style>
